<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>


    <context id="MySQLTables" targetRuntime="MyBatis3Simple">
        <!-- 生成注释 -->
        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <property name="suppressAllComments" value="false"/>
        </commentGenerator>

        <!-- 数据库连接 -->
        <jdbcConnection
                driverClass="com.mysql.cj.jdbc.Driver"
                connectionURL="jdbc:mysql://localhost:3306/testdb"
                userId="root"
                password="password">
        </jdbcConnection>

        <!-- Java类型转换 -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- 生成Model -->
        <javaModelGenerator targetPackage="com.smartmonkey.model" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- 生成XML Mapper -->
        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- 生成Mapper接口 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.smartmonkey.mapper" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="stock_in" domainObjectName="StockIn">
            <!--            <generatedKey column="part_id" sqlStatement="MySql" identity="true"/>-->
        </table>
        <table tableName="stock_out" domainObjectName="StockOut">
            <!--            <generatedKey column="part_id" sqlStatement="MySql" identity="true"/>-->
        </table>
        <table tableName="inventory" domainObjectName="Inventory">
            <!--            <generatedKey column="part_id" sqlStatement="MySql" identity="true"/>-->
        </table>
        <table tableName="part_category" domainObjectName="PartCategory">
            <!--            <generatedKey column="part_id" sqlStatement="MySql" identity="true"/>-->
        </table>
        <table tableName="spare_parts" domainObjectName="SparePart">
            <generatedKey column="part_id" sqlStatement="MySql" identity="true"/>
        </table>
    </context>
</generatorConfiguration>